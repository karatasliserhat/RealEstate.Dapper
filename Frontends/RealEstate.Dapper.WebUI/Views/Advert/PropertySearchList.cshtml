
@model List<ResultProductWithCategoryAndAppUser>
@{ 
    Layout = "~/Views/UILayoutTwo/UILayoutTwo.cshtml";
}
<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">İlan Arama Sonucunuz</h3>
            </div>
            <div class="row pt-md-5 pt-4">
                @if (Model.Count > 0)
                {

                    foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-3">
                            <a href="property-single.html">
                                <div class="box16">
                                    <div class="rentext-listing-category"><span>@item.Type</span><span>@item.CategoryName</span></div>
                                    <img class="img-fluid" style="width:400px;height:300px;" src="@item.CoverImage" alt="">
                                    <div class="box-content">
                                        <h3 class="title">₺ @item.Price</h3>
                                        <span class="post">@item.City - @item.District</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning text-center">
                        <p>Aradığınız İlan Bulunamadı.</p>
                    </div>
                }

            </div>
        </div>
    </div>
</section>