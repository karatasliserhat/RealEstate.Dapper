@model ResultProductAndDetailListViewModel
@{
    ViewData["Title"] = "PropertyAdvert";
    Layout = "~/Views/UILayoutTwo/UILayoutTwo.cshtml";
}

<section class="w3l-blog post-content py-5">
    <div class="container py-lg-4 py-md-3 py-2">
        <div class="inner mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <div class="listing-category"><span>@Model.Type</span></div>
                </li>
                <li><span class="fa fa-clock-o"></span> @(((DateTime.Now-Model.CreatedDate).Days)/30) Ay Önce Yayınlandı</li>
                <li><span class="fa fa-eye"></span> 250 Görüntüleme</li>
            </ul>
        </div>
        <div class="post-content">
            <h2 class="title-single"> @Model.Title</h2>
        </div>
        <div class="blo-singl mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <p>@Model.Address</p>
                </li>
                <li><span class="fa fa-bed"></span> @Model.BedRoomCount Banyo</li>
                <li><span class="fa fa-bath"></span> @Model.RoomCount Oda</li>
                <li><span class="fa fa-share-square-o"></span> @Model.Size MetreKare</li>
            </ul>
            <ul class="share-post">
                <a href="#url" class="cost-estate m-o">@(String.Format("₺ {0:N}", Model.Price))</a>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-8 w3l-news">
                <div class="blog-single-post">
                    @await Component.InvokeAsync("_AdvertPropertyImageComponentPartial", new { productId = Model.Id })
                    <div class="single-post-content">
                        <h3 class="post-content-title mb-3">Açıklama</h3>
                        <p class="mb-4">
                            @Model.Description
                        </p>
                        <div class="single-bg-white">
                            <h3 class="post-content-title mb-4">İlan Detayları</h3>
                            <ul class="details-list">
                                <li><strong>İlan Id:</strong> @Model.Id </li>
                                <li><strong>MetreKare :</strong> @Model.Size </li>
                                <li><strong>Oda Sayısı :</strong> @Model.RoomCount </li>
                                <li><strong>Yatak Oda Sayısı :</strong> @Model.BedRoomCount</li>
                                <li><strong>Banyo :</strong> @Model.BedRoomCount</li>
                                <li><strong>Dış Malzeme :</strong> Yok </li>
                                <li><strong>Yapı Türü :</strong> Beton </li>
                                <li><strong>Garaj Boyutu :</strong> Standart </li>
                                <li><strong>Garaj Sayısı :</strong> @Model.GarageSize </li>
                                <li><strong>Fiyat :</strong>@(String.Format("₺ {0:N}", Model.Price)) </li>
                                <li><strong>Yıl :</strong> @Model.BuildYear </li>
                                <li><strong>Tarih:</strong> @Model.CreatedDate.ToString("MM-yyyy") </li>
                            </ul>
                        </div>
                        @await Component.InvokeAsync("_AdvertPropertyAmenityComponentPartial", new { ProductId = Model.Id })
                    </div>

                    <div class="single-bg-white">
                        <h3 class="post-content-title mb-4">Lokasyon Bilgisi</h3>
                        <div class="agent-map">
                            <iframe src="@Model.Location"
                                    frameborder="0" style="border:0" allowfullscreen=""></iframe>
                        </div>
                    </div>

                    <div class="single-bg-white mb-0">
                        <h3 class="post-content-title mb-4">Video</h3>
                        <div class="post-content">
                            <iframe src="@Model.VideoUrl" frameborder="0"
                                    allowfullscreen=""></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sidebar-side col-lg-4 col-md-12 col-sm-12 mt-lg-0 mt-5">
                <aside class="sidebar">

                    <!-- Popular Post Widget-->
                    @await Component.InvokeAsync("_AdvertPropertyEstateContactComponentPartial", new { appUserId = Model.AppUserId })


                    <!-- Popular Post Widget-->
                    <div class="sidebar-widget popular-posts">
                        <div class="sidebar-title">
                            <h4>Emlakçıya Ait Diğer İlanlar</h4>
                        </div>

                        <article class="post">
                            <figure class="post-thumb">
                                <img src="~/starter/assets/images/l1.jpg" class="radius-image" alt="">
                            </figure>
                            <div class="text">
                                <a href="#blog-single">
                                    Why we are the best in the business
                                </a>
                                <div class="post-info">Sep 09, 2020 - 2 comments</div>
                            </div>
                        </article>

                        <article class="post">
                            <figure class="post-thumb">
                                <img src="~/starter/assets/images/l2.jpg" class="radius-image" alt="">
                            </figure>
                            <div class="text">
                                <a href="#blog-single">
                                    Build your next landing page.
                                </a>
                                <div class="post-info">Sep 09, 2020 - 2 comments</div>
                            </div>
                        </article>

                        <article class="post">
                            <figure class="post-thumb">
                                <img src="~/starter/assets/images/l3.jpg" class="radius-image" alt="">
                            </figure>
                            <div class="text">
                                <a href="#blog-single">
                                    Simply the best. Better than the rest.
                                </a>
                                <div class="post-info">Sep 10, 2020 - 2 comments</div>
                            </div>
                        </article>

                    </div>

                </aside>
            </div>
        </div>
    </div>
</section>
