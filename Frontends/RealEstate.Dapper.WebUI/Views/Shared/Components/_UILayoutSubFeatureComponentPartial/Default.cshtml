@model List<ResultSubFeature>
<section class="w3l-bottom-grids py-5" id="steps">
    <div class="container py-lg-5 py-md-4 py-2">
        <div class="grids-area-hny main-cont-wthree-fea row">

            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 grids-feature">
                        <div class="area-box no-box-shadow text-left">
                            <span class="@item.IconUrl"></span>
                            <h5>@item.TopTitle</h5>
                            <h4><a asp-action="Index" asp-controller="Default" class="title-head">@item.MainTitle</a></h4>
                            <p>@(item.Descripiton.Substring(0, 70).Insert(70,"..."))</p>
                            <a asp-action="Index" asp-controller="Default" class="more">@item.SubTitle<span class="fa fa-long-arrow-right"></span> </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning text-center"></div>
                <p>Bilgi Bulunamadı</p>
            }

        </div>
    </div>
</section>