@model List<ResultProductWithCategoryAndEmployee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/EstateAgent/Views/EstateAgentLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Geçmiş İlanlarım</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">İlan Tipi</th>
                                <th scope="col">Adres</th>
                                <th scope="col">Personel</th>
                                <th scope="col">Günün Fırsatı</th>
                                <th scope="col">Aktif Yap</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.City</td>
                                        <td>@item.District</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Price</td>
                                        <td>@item.Type</td>
                                        <td>@item.Address</td>
                                        <td>@item.EmployeeName</td>
                                        @if (item.DealOfTheDay == false)
                                        {
                                            <td><a asp-action="DealOfTheDayTrue" asp-controller="AdminProduct" asp-route-dataId="@item.DataProtect" class="btn btn-outline-primary">Aktif Yap</a></td>
                                        }
                                        else
                                        {
                                            <td><a asp-action="DealOfTheDayFalse" asp-controller="AdminProduct" asp-route-dataId="@item.DataProtect" class="btn btn-outline-info">Pasif Yap</a></td>
                                        }
                                        <td><a asp-action="#" asp-controller="#" asp-route-dataId="@item.DataProtect" class="btn btn-outline-dark">Aktif Yap</a></td>
                                        <td><a asp-action="Update" asp-controller="AdminProduct" asp-route-dataId="@item.DataProtect" class="btn btn-outline-warning">Güncelle</a></td>
                                        <td><a asp-action="Delete" asp-controller="AdminProduct" asp-route-dataId="@item.DataProtect" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="12">İlanlara ait kayıtlı veri yok</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-action="Create" asp-controller="EstateAgentMyAds" class="btn btn-outline-info">Yeni İlan</a>
                </div>
            </div>
        </div>
    </div>
</div>

