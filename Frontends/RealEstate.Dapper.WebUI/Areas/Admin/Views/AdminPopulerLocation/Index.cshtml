@model List<ResultPopulerLocationViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayaout/Index.cshtml";

    int count = 0;
}
<style>
    img {
        border-radius: 50px;
    }
</style>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Lokasyonlar</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir Adı</th>
                                <th scope="col">Status</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td><img src="@item.ImageUrl" width="50" height="50" /> @item.CityName</td>
                                        <td>@(item.Status==false?"Pasif":"Aktif")</td>
                                        <td><a asp-action="Update" asp-controller="AdminPopulerLocation" asp-route-dataId="@item.DataProtect" class="btn btn-outline-warning">Güncelle</a></td>
                                        <td><a asp-action="Delete" asp-controller="AdminPopulerLocation" asp-route-dataId="@item.DataProtect" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5">Lokasyona ait kayıtlı veri yok</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-action="Create" asp-controller="AdminPopulerLocation" class="btn btn-outline-info">Yeni Lokasyon</a>
                </div>
            </div>
        </div>
    </div>
</div>
