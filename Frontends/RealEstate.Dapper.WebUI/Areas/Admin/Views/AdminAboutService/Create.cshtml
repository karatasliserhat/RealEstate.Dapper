@model CreateAboutServiceViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminLayaout/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <form asp-action="Create" method="post">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">Hizmet Ekleme Sayfası</h6>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="@Model.AboutServiceName">
                        <label>Hizmet Adı</label>
                    </div>
                    <input type="submit" class="btn btn-success" name="name" value="Kaydet" />
                </div>
            </form>
        </div>
    </div>
</div>