@model List<ResultToDoListViewModel>
<div class="col-sm-12 col-md-6 col-xl-4">
    <div class="h-100 bg-light rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Yapılacaklar Listesi</h6>
            <a href="">Tümünü Gör</a>
        </div>
        <div class="d-flex mb-2">
            <input class="form-control bg-transparent" type="text" placeholder="Yapılacak">
            <button type="button" class="btn btn-primary ms-2">Ekle</button>
        </div>

        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="d-flex align-items-center border-bottom py-2">
                    @if (item.Status is true)
                    {
                        <input class="form-check-input m-0" type="checkbox">
                    }
                    else
                    {
                        <input class="form-check-input m-0" type="checkbox" checked>

                    }
                    <div class="w-100 ms-3">
                        <div class="d-flex w-100 align-items-center justify-content-between">
                            @if (item.Status is true)
                            {
                                <span>@item.Description</span>
                                <button class="btn btn-sm"><i class="fa fa-times"></i></button>
                            }
                            else
                            {
                                <span><del>@item.Description</del></span>
                                <button class="btn btn-sm text-primary"><i class="fa fa-times"></i></button>

                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="d-flex align-items-center border-bottom py-2">
                <div class="w-100 ms-3">
                    <div class="d-flex w-100 align-items-center justify-content-between">
                        <span>Yapılacak İş Yok</span>
                    </div>
                </div>
            </div>
        }

    </div>
</div>